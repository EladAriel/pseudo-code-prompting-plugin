{
  "description": "Pseudo-code prompting plugin hooks for transformation and validation",
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "sh ${CLAUDE_PLUGIN_ROOT}/hooks/core/user-prompt-submit.sh",
        "statusMessage": "Checking for pseudo-code transformation commands...",
        "timeout": 10
      },
      {
        "type": "command",
        "command": "sh ${CLAUDE_PLUGIN_ROOT}/hooks/compression/context-compression-helper.sh",
        "statusMessage": "Analyzing context compression opportunities...",
        "timeout": 10
      },
      {
        "type": "command",
        "command": "sh ${CLAUDE_PLUGIN_ROOT}/hooks/tree/context-aware-tree-injection.sh",
        "statusMessage": "Analyzing project structure for context-aware suggestions...",
        "timeout": 15
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "sh ${CLAUDE_PLUGIN_ROOT}/hooks/validation/post-transform-validation.sh",
            "statusMessage": "Validating transformed output...",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
