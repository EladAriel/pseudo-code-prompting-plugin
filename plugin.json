{
  "$schema": "https://claude-plugins.dev/schemas/plugin.schema.json",
  "name": "@pseudo-code/prompting",
  "version": "2.1.0",
  "description": "Advanced prompt transformation system with validation, optimization, and compression capabilities using progressive loading and pseudo-code methodology",
  "displayName": "Pseudo-Code Prompting",
  "author": {
    "name": "Elad Ariel"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EladAriel/pseudo-code-prompting-plugin"
  },
  "license": "MIT",
  "keywords": [
    "prompt-engineering",
    "pseudo-code",
    "feature-development",
    "automation",
    "workflow-optimization",
    "progressive-loading",
    "requirement-engineering",
    "validation",
    "optimization",
    "compression",
    "security-validation"
  ],
  "engines": {
    "claude-code": ">=1.0.0"
  },
  "categories": [
    "prompt-engineering",
    "workflow",
    "automation",
    "architecture"
  ],
  "skills": [
    {
      "id": "prompt-structurer",
      "name": "Prompt Structurer",
      "path": "./.claude/skills/prompt-structurer",
      "description": "Transform natural language to pseudo-code using PROMPTCONVERTER methodology",
      "tags": ["prompt-engineering", "transformation", "core"]
    },
    {
      "id": "feature-dev-enhancement",
      "name": "Feature-Dev Enhancement",
      "path": "./.claude/skills/feature-dev-enhancement",
      "description": "Apply structured pseudo-code across feature-dev workflow phases",
      "tags": ["workflow", "feature-dev", "integration"]
    },
    {
      "id": "prompt-analyzer",
      "name": "Prompt Analyzer",
      "path": "./.claude/skills/prompt-analyzer",
      "description": "Analyze prompts for ambiguity, complexity, and clarity",
      "tags": ["analysis", "quality", "validation"]
    },
    {
      "id": "prompt-optimizer",
      "name": "Prompt Optimizer",
      "path": "./.claude/skills/prompt-optimizer",
      "description": "Optimize pseudo-code for completeness and implementation readiness",
      "tags": ["optimization", "enhancement", "quality"]
    },
    {
      "id": "context-compressor",
      "name": "Context Compressor",
      "path": "./.claude/skills/context-compressor",
      "description": "Compress verbose requirements into concise pseudo-code format",
      "tags": ["compression", "efficiency", "optimization"]
    },
    {
      "id": "requirement-validator",
      "name": "Requirement Validator",
      "path": "./.claude/skills/requirement-validator",
      "description": "Validate pseudo-code requirements for completeness and correctness",
      "tags": ["validation", "quality", "security"]
    }
  ],
  "agents": [
    {
      "id": "prompt-analyzer",
      "name": "Prompt Analyzer",
      "display_name": "Prompt Analyzer",
      "path": "./.claude/agents/prompt-analyzer.md",
      "color": "blue",
      "triggers": {
        "keywords": ["analyze", "complexity", "ambiguity", "clarity"],
        "patterns": ["analyze.*prompt", "check.*clarity"]
      },
      "capabilities": [
        "ambiguity-detection",
        "complexity-scoring",
        "requirement-analysis"
      ],
      "skills_used": ["prompt-analyzer"]
    },
    {
      "id": "prompt-transformer",
      "name": "Prompt Transformer",
      "display_name": "Prompt Transformer",
      "path": "./.claude/agents/prompt-transformer.md",
      "color": "green",
      "triggers": {
        "keywords": ["transform", "convert", "structure", "pseudo-code"],
        "patterns": ["transform.*query", "convert.*to.*pseudo"]
      },
      "capabilities": [
        "intent-extraction",
        "function-generation",
        "parameter-inference"
      ],
      "skills_used": ["prompt-structurer"]
    },
    {
      "id": "prompt-optimizer",
      "name": "Prompt Optimizer",
      "display_name": "Prompt Optimizer",
      "path": "./.claude/agents/prompt-optimizer.md",
      "color": "purple",
      "triggers": {
        "keywords": ["optimize", "enhance", "improve", "complete"],
        "patterns": ["optimize.*prompt", "improve.*pseudo-code"]
      },
      "capabilities": [
        "parameter-enhancement",
        "constraint-addition",
        "ambiguity-resolution"
      ],
      "skills_used": ["prompt-optimizer"]
    },
    {
      "id": "context-compressor",
      "name": "Context Compressor",
      "display_name": "Context Compressor",
      "path": "./.claude/agents/context-compressor.md",
      "color": "orange",
      "triggers": {
        "keywords": ["compress", "condense", "reduce", "simplify"],
        "patterns": ["compress.*context", "reduce.*verbose"]
      },
      "capabilities": [
        "requirement-compression",
        "redundancy-elimination",
        "information-density"
      ],
      "skills_used": ["context-compressor"]
    },
    {
      "id": "requirement-validator",
      "name": "Requirement Validator",
      "display_name": "Requirement Validator",
      "path": "./.claude/agents/requirement-validator.md",
      "color": "red",
      "triggers": {
        "keywords": ["validate", "verify", "check", "review"],
        "patterns": ["validate.*requirement", "check.*completeness"]
      },
      "capabilities": [
        "completeness-checking",
        "security-validation",
        "edge-case-detection"
      ],
      "skills_used": ["requirement-validator"]
    }
  ],
  "commands": [
    {
      "id": "transform-query",
      "name": "Transform Query",
      "file": "./.claude/commands/transform-query.md",
      "description": "Transform natural language to pseudo-code"
    },
    {
      "id": "validate-requirements",
      "name": "Validate Requirements",
      "file": "./.claude/commands/validate-requirements.md",
      "description": "Validate pseudo-code for completeness and correctness"
    },
    {
      "id": "optimize-prompt",
      "name": "Optimize Prompt",
      "file": "./.claude/commands/optimize-prompt.md",
      "description": "Optimize pseudo-code for implementation readiness"
    },
    {
      "id": "compress-context",
      "name": "Compress Context",
      "file": "./.claude/commands/compress-context.md",
      "description": "Compress verbose requirements into concise pseudo-code"
    }
  ],
  "hooks": [
    {
      "id": "user-prompt-submit",
      "type": "user-prompt-submit",
      "file": "./.claude/hooks/user-prompt-submit.sh",
      "description": "Hook triggered on user prompt submission",
      "security_risk": "LOW"
    },
    {
      "id": "post-transform-validation",
      "type": "user-prompt-submit",
      "file": "./.claude/hooks/post-transform-validation.sh",
      "description": "Auto-validate transformed pseudo-code for completeness",
      "security_risk": "LOW"
    },
    {
      "id": "context-compression-helper",
      "type": "user-prompt-submit",
      "file": "./.claude/hooks/context-compression-helper.sh",
      "description": "Suggest context compression for verbose requirements",
      "security_risk": "LOW"
    }
  ],
  "progressive_loading": {
    "enabled": true,
    "strategy": "semantic-discovery",
    "tiers": {
      "tier_1_discovery": {
        "description": "Analyze request and determine skill relevance",
        "typical_files": ["capabilities.json"],
        "typical_tokens": "100-110",
        "when": "Always loaded first for semantic matching"
      },
      "tier_2_overview": {
        "description": "Load transformation methodology and patterns",
        "typical_files": ["SKILL.md"],
        "typical_tokens": "300-800",
        "when": "Skill confirmed relevant to request"
      },
      "tier_3_specific": {
        "description": "Load specific patterns and parameter libraries",
        "typical_files": ["references/*.md"],
        "typical_tokens": "90-300 per file",
        "when": "Specific pattern or parameter guidance needed"
      },
      "tier_4_generate": {
        "description": "Load templates for code generation",
        "typical_files": ["templates/*"],
        "typical_tokens": "150-400 per file",
        "when": "Generating transformation output"
      }
    }
  },
  "workflows": [
    {
      "id": "full-transformation",
      "name": "Full Transformation Workflow",
      "description": "Complete workflow from analysis to validated pseudo-code",
      "skills": [
        "prompt-structurer",
        "prompt-analyzer",
        "requirement-validator"
      ],
      "agents": {
        "sequence": [
          "prompt-analyzer",
          "prompt-transformer",
          "requirement-validator"
        ]
      },
      "estimated_tokens": 900
    },
    {
      "id": "quick-transform",
      "name": "Quick Transform",
      "description": "Fast transformation without deep analysis",
      "skills": ["prompt-structurer"],
      "agents": {
        "primary": "prompt-transformer"
      },
      "estimated_tokens": 200
    },
    {
      "id": "optimize-and-validate",
      "name": "Optimize and Validate",
      "description": "Enhance pseudo-code and validate for implementation readiness",
      "skills": [
        "prompt-optimizer",
        "requirement-validator"
      ],
      "agents": {
        "sequence": [
          "prompt-optimizer",
          "requirement-validator"
        ]
      },
      "estimated_tokens": 700
    },
    {
      "id": "compress-transform-validate",
      "name": "Compress, Transform, Validate",
      "description": "Full workflow from verbose requirements to validated pseudo-code",
      "skills": [
        "context-compressor",
        "prompt-structurer",
        "requirement-validator"
      ],
      "agents": {
        "sequence": [
          "context-compressor",
          "prompt-transformer",
          "requirement-validator"
        ]
      },
      "estimated_tokens": 1000
    }
  ],
  "discovery": {
    "semantic_matching": {
      "enabled": true,
      "confidence_threshold": 0.7,
      "max_skills_per_task": 3,
      "max_agents_per_task": 2
    }
  },
  "strict": true
}
